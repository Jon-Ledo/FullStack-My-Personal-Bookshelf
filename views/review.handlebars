{{#with bookData}}

<section class="Review-heading container">
  <h1 class="text-center book-name mt-3 mb-5">Reviews for <span class="docTitle">{{name}}</span></h1>

  <div class="row">
    <div class="book-info-container col-md-4" data-user="m">

      {{!-- conditionally render image --}}
      {{#if image_url}}
      <img src="{{image_url}}" alt="{{name}} by {{author}}">
      {{else}}
      <img src="/images/unavailable-cover.jpg" alt="{{name}} by {{author}}">
      {{/if}}

      <p>{{name}}</p>
      
      <p>{{author}}</p> 
      {{!-- until logged in status may be shown --}}
      <p class="hidden" id="hiddenUserName">{{user.user_name}}</p> 
    
    </div>
    
    {{!-- Form to add a review --}}
    <form class="col-md-6 mb-5">
      <div class="form-floating mb-3">
        <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea"
          style="height: 250px"></textarea>
        <label for="floatingTextarea">Submit a review</label>
      </div>
    
      <button type="submit" class="btn btn-primary" id="submitReview">Submit</button>
      <button type="submit" class="btn btn-primary" id="editReview">Edit Review</button>
    <button type="submit" class="btn btn-primary" id="deleteReview">Delete Review</button>
    </form>
    {{!-- form end --}}


    <h1 class="fs-1 text-center my-5 book-name">Let's talk about it!</h1>


    {{#if user_reviews}}
    {{#each user_reviews}}
    <div class="review-box-container">
      <div class="review-box col-md-6 mb-3">

        <div class="profile-img"></div>
      
        <p class="name-user mb-1 usernames"><span id="userName">{{user_name}}</span></p>
        <p class="subtitle">@{{email}}</p>
      
        {{!-- stars --}}
        <div class="review mb-1">
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
        </div>
      
      
        <div class="reader-review mb-5" data-user-id="{{id}}" data-review-id="{{review.id}}">
          <p>{{review.text}}</p>
          <p class="mt-3">last updated: {{format_date review.createdAt}}, {{format_time review.createdAt}}</p>
        </div>

        
      </div>{{!-- review-box div --}}
    </div>{{!-- review-box-container --}}

    {{/each}}
    {{!-- Render this if the user_reviews array is empty --}}
    {{else}}
    <h1>No reviews yet</h1>
    {{/if}}

  </div>{{!-- row div --}}
</section>

<p class="hidden" id="secretSelector">{{user_id}}</p>

{{/with}}
