
{{> hero}}

<div class="container">
  {{#if loggedIn}}
  <h1 class="mt-3">Welcome Back to your Bookshelf</h1>
  {{/if}}


  <div class="d-flex justify-content-end mt-2">
      <div class="card" style="width: 18rem;">
        <img src="/images/books.jpeg" class="card-img-top" alt="Asal Lotfi Unsplash">
        <div class="card-body">
          <h5 class="card-title"><b>My Bookshelf</b></h5>
          <p class="card-text">“A reader lives a thousand lives before he dies . . . The man who never reads lives only one.” - George R.R. Martin.</p>

          <form class="form login-form">
            <div class="mb-3 mt-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required>

              <div class="mb-3 mt-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" required>
              </div>

              <button type="submit" class="btn btn-warning">Login</button>
              <br>
              <br>
              <button type="submit" class="btn btn-warning"><a href="./sign_up">Create Account</a></button>
          </form>

        </div>
      </div>
  </div>
</div>